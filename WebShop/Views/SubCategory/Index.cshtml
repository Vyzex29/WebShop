@model List<SubCategoryModel>

@if(Model.Count == 0){
    <p>There are no categories</p>
}else
{
    <table class="table table-striped">
    <tr class="firstRow">
        <th>Id</th>
        <th>Name</th>
        <th>More Info</th>
    </tr>
    @foreach (var subCategory in Model)
    {
        <tr>
            <td>@subCategory.Id</td>
            <td>@subCategory.Name</td>
            <td><a asp-area="" asp-controller="SubCategory" asp-action="View" asp-route-id="@subCategory.Id" asp-route-categoryName="@subCategory.Name">More info</a></td>
        </tr>
    }
</table>
<button class="btn btn-secondary"><a asp-controller="SubCategory" asp-action="Create">Add</a></button>

}