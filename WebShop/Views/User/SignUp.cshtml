@model CreateUserModel
<h2>Create a new account</h2>

@Html.ValidationSummary()

<form asp-controller="User" asp-action="SignUp" method="post">
  <div class="mb-3">
    <label asp-for="UserName" class="form-label">UserName:</label>
    <input asp-for="UserName" type="text" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Email" class="form-label">E-mail:</label>
    <input asp-for="Email" type="email" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="Password" class="form-label">Password:</label>
    <input asp-for="Password" type="password" class="form-control">
  </div>
  <div class="mb-3">
    <label asp-for="RepeatPassword" class="form-label">Repeat Password:</label>
    <input asp-for="RepeatPassword" type="password" class="form-control">
  </div>
  <div class="mb-3">
      <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
